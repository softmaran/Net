@if (Patients.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col">FirstName</th>
                <th scope="col">LastName</th>
                <th scope="col">City</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var patient in Patients)
            {
                <tr>
                    <td>
                        @patient.ID
                    </td>
                    <td class="align-middle">
                        @patient.FirstName
                    </td>
                    <td class="align-middle">
                        @patient.LastName
                    </td>
                    <td class="align-middle">
                        @patient.City
                    </td>
                    <td class="align-middle">
                        <button type="button" class="btn btn-info">Update</button>
                    </td>
                    <td class="align-middle">
                        <button @onclick="@((e)=> OnDeletePatient(e,patient))" type="button" class="btn btn-danger">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <span class="warn">
        @Status
    </span>
}
else
{
    <span>
        Loading patients...
    </span>
}